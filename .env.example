# Sofathek Environment Configuration
# SERVER COEXISTENCE SAFETY: All settings respect shared server environments

# Server Configuration - SAFETY: Only use designated Sofathek ports
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# CORS Configuration - SAFETY: Restrict to known origins
CORS_ORIGIN=http://localhost:3000

# Security Configuration
JWT_SECRET=change-me-in-production-with-strong-secret
JWT_EXPIRES_IN=7d

# Media Storage Configuration - SAFETY: Isolated storage paths
SOFATHEK_MEDIA_PATH=./media/videos
SOFATHEK_THUMBNAIL_PATH=./media/thumbnails
SOFATHEK_TEMP_PATH=./media/temp
SOFATHEK_MAX_STORAGE_GB=100

# YouTube Download Configuration - SAFETY: Resource limits
YTDLP_MAX_CONCURRENT=2
YTDLP_MAX_FILESIZE=5GB
YTDLP_QUALITY=best[height<=1080]

# Performance Configuration - SAFETY: Resource-conscious defaults
VIDEO_PROCESSING_THREADS=2
FFMPEG_NICE_LEVEL=10
MAX_UPLOAD_SIZE=10GB

# Logging Configuration - SAFETY: Structured logging without system interference
LOG_LEVEL=info
LOG_FILE=./logs/sofathek.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Development Configuration
CHOKIDAR_USEPOLLING=false

# Database Configuration (Future use - isolated Sofathek DB)
# DATABASE_URL=sqlite:./data/sofathek.db

# Network Configuration - SAFETY: No interference with system networking
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Theme Configuration
DEFAULT_THEME=netflix-dark
THEME_PERSISTENCE=true

# Video Player Configuration
VIDEO_BUFFER_SIZE=1MB
VIDEO_PRELOAD_METADATA=true
VIDEO_CROSSORIGIN=anonymous

# Admin Configuration
ADMIN_ENABLED=true
ADMIN_PASSWORD_MIN_LENGTH=12

# Backup Configuration - SAFETY: Isolated backup storage
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_SIZE_GB=50

# Docker Configuration - SAFETY: Sofathek project isolation
COMPOSE_PROJECT_NAME=sofathek